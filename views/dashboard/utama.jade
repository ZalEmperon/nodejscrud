extends ../layout/base 
block content 
    section.content-header 
        h1 
            | Blank Page
            small it all starts here
        ol.breadcrumb 
            li 
                a(href='#') 
                    i.fa.fa-dashboard
                    | Level 
            li.active Here
    section.content
                .box
                    .box-header.with-border
                        h3.box-title
                            | Profil Perusahaan
                        .box-tools.pull-right
                            button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
                                i.fa.fa-minus
                    .box-body
                        for row, index in data
                            .row.form-group
                                label.col-sm-2.col-form-label(for='inputText') Nama Profil
                                .col-sm-10
                                    input.form-control(type='text' disable readonly value='#{row.nama_profil}')
                            .row.form-group
                                label.col-sm-2.col-form-label(for='inputText') Alamat
                                .col-sm-10
                                    input.form-control(type='text' disable readonly value='#{row.alamat}')
                            .row.form-group
                                label.col-sm-2.col-form-label(for='inputDate') Bidang
                                .col-sm-10
                                    input.form-control(type='text' disable readonly value='#{row.bidang}')