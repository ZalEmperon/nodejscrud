extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Customer
			small menu for editing customer data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Customer
				.box-tools.pull-right
					button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
						i.fa.fa-minus

			.box-body
				form(role='form' method='post' action='/customers/edit/#{(id==undefined) ? data.id : id}' enctype="multipart/form-data")
					.row

						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| NIP
									input(type='text' value='#{ (nip == undefined) ? data.nip : nip }' ,name='nip' placeholder='Enter NIP', autofocus).form-control
								.form-group
									label
										| Nama
									input(type='text' value='#{ (nama == undefined) ? data.nama : nama }' name='nama' placeholder='Enter Nama').form-control
								.form-group
									label
										| Alamat
									input(type='text' value='#{ (alamat == undefined) ? data.alamat : alamat }' name='alamat' placeholder='Enter Alamat').form-control
								.form-group
									label
										| No Telp
									input(type='text' value='#{ (no_hp == undefined) ? data.no_hp : no_hp }' name='no_hp' placeholder='Enter No Telp').form-control
								.form-group
									label
										| Status
									select#fakultas(name="status").form-control
										option(value="#{ (status == undefined) ? data.status : status }") #{ (status == undefined) ? data.status : status }
										option(value="Honorer") Honorer
										option(value="Pegawai") Pegawai
								.form-group
									label
										| Jabatan
									input(type='text' value='#{ (jabatan == undefined) ? data.jabatan : jabatan }' name='jabatan' placeholder='Enter Jabatan').form-control
								.form-group
									label
										| Foto
									input(type='file' name='gambar').form-control
							.box-footer
								input(type="hidden" name="_method" value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/customers/pegawai').btn.btn-primary.pull-right
									| Back